<table id="example2" class="table table-bordered table-hover">
    <thead>
    <tr>
      <th>No.</th>
      <th>Nama Produk</th>
      <th>Harga</th>
      <th>Brand</th>
      <th>Stock</th>
      <th>Action</th>
    </tr>
    </thead>
    <tbody>
        <% for(let i=0; i < product.length; i++) { %>
        <tr>
            <td> <%=  i + 1 %></td>
            <td> <%=  product[i].name %></td>
            <td> <%=  product[i].nominals.value %>
                 <%=  product[i].nominals.price %>
            </td>
            <td>
                <%= product[i].brands.name %>
            </td>
            <td>
                <% if(product[i].stock === 'ready'){ %>
                    <span class="badge badge-success">
                       Ada
                    </span>
                <% }else{ %>
                    <span class="badge badge-danger">
                        Kosong
                    </span>
               <% } %>
            </td>
            <td>
                <form action="/product/status/<%= product[i]._id %>" method="POST" style="display: inline-block;">
                    <button class="btn btn-primary btn-sm" >
                        <i class="fas fa-folder"></i>
                        <% if(product[i].stock === 'ready'){ %>
                        Matikan
                          
                    <% }else{ %>
                        Hidupkan
                   <% } %>
                    </button>
                    
                </form> 
                <a href="/product/edit/<%= product[i]._id %>" class="btn btn-info btn-sm">
                     <i class=" fas fa-pencil-alt "></i> Ubah</a>
                <form action="/product/delete/<%= product[i]._id %>?_method=DELETE" method="POST" style="display: inline-block;">
                
                <button class="btn btn-danger btn-sm" > 
                    <i class="fas fa-trash"></i> Hapus
                </button>
            </form></td>
        </tr>
        <% } %>
    </tbody>
    
  </table>