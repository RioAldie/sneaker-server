<%- include ("../../partials/header.ejs") %>
<%- include ("../../partials/navbar.ejs") %>
<%- include ("../../partials/sidebar.ejs") %>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Bank</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item"><a href="/category">Bank</a></li>
              <li class="breadcrumb-item active">Ubah</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <!-- general form elements -->
            <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Form Ubah Bank "<%= bank.bankName %>"</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form action="/bank/edit/<%= bank._id %>" method="POST">
                  <div class="card-body">
                    <div class="form-group">
                      <label for="name">Masukan Nama</label>
                      <input type="text" value="<%= bank.name %>" class="form-control" name="name" id="name" placeholder="Masukan Nama ">
                    </div>
                    <div class="form-group">
                        <label for="bankName">Masukan Nama Bank</label>
                        <input type="text" value="<%= bank.bankName %>" class="form-control" name="bankName" id="bankName" placeholder="Masukan Nama Bank">
                      </div>
                      <div class="form-group">
                        <label for="nomorRekening">Masukan Nomor Rekening</label>
                        <input type="text" value="<%= bank.nomorRekening %>" class="form-control" name="nomorRekening" id="nomorRekening" placeholder="Masukan Nomor Rekening">
                      </div>
                  <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Simpan</button>
                  </div>
                </form>
              </div>
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
<%- include ("../../partials/footer.ejs") %>
<%- include ("../../partials/js.ejs") %>