<%- include ("../../partials/header.ejs") %>
<%- include ("../../partials/navbar.ejs") %>
<%- include ("../../partials/sidebar.ejs") %>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Brand</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item"><a href="/category">Nominal</a></li>
              <li class="breadcrumb-item active">Ubah</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <!-- general form elements -->
            <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Form Ubah Nominal "<%= nominal.value %>"</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form action="/nominal/edit/<%= nominal._id %>" method="POST">
                  <div class="card-body">
                    <div class="form-group">
                      <label for="value">Masukan Value</label>
                      <input type="text" value="<%= nominal.value %>" class="form-control" name="value" id="value" placeholder="Masukan Nama Value">
                    </div>
                    <div class="form-group">
                        <label for="name">Masukan Price</label>
                        <input type="text" value="<%= nominal.price %>" class="form-control" name="price" id="price" placeholder="Masukan Harga">
                      </div>
  
                  <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Simpan</button>
                  </div>
                </form>
              </div>
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
<%- include ("../../partials/footer.ejs") %>
<%- include ("../../partials/js.ejs") %>